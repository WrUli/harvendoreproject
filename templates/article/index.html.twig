{% extends 'base.html.twig' %}
{% block title %}Harvendore blog{% endblock %}

{% block body %}

<section class="blog_and_sidebar_container">

    <section class="blog_container">
        
        <div class="blog_articles_container">
            {% for article in articles %}
            <a href="{{ path('app_article_show', {'id': article.id}) }}">
                <article class="blog_article_container">
                    <div class="blog_img_container">
                        {% if article.img %}
                            <img class="blog_img" src="{{ asset('uploadDirectory/' ~ article.img) }}" alt="{{ article.title }}" >
                        {% else %}
                            <img class="blog_img" src="{{ asset('assets/img/questionmarkcake.jpg')}}" alt="Image générique" >
                        {% endif %}
                    </div>
                    <div class="blog_article_text">
                        <div>
                            <h3>{{ article.title }}</h3>
                            <p> {{article.createDate|date('d-m-Y')}} </p>
                        </div>
                        <p> {{article.article_text}} </p>
                    </div>
                </article> 
            </a>   
            {% endfor %}
        </div>    
    </section>


    <section class="blog_sidebar">
        <div class="sidebar_blog_1">
            <div>
                <p>Ici même</p>
            </div>
        </div>
        <div class="sidebar_blog_1">
            <div>
                <p>Les noms d'articles différents</p>
            </div>
        </div>
        <div class="sidebar_blog_1"> 
            <div>
                <p>A lire aussi etc etc</p>
            </div>
        </div>
        <div class="sidebar_blog_1">
            <div>
                <p>Les mieux noté<s></s></p>
            </div>
        </div>
    </section>


</section>
    
{% endblock %}